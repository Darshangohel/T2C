{
  "compilerOptions": {
    "target": "ESNext",                      
    "module": "ESNext",                      
    "jsx": "react-jsx",                      
    "moduleResolution": "node",              
    "esModuleInterop": true,                 
    "allowSyntheticDefaultImports": true,   
    "strict": true,                         
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,               
    "isolatedModules": true,                 
    "noEmit": true                           
  },
  "include": ["src"],                       
  "exclude": ["node_modules", "dist"]
}
